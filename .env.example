# Grafana admin credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=super_secure_password

# Grafana SMTP settings (if enabled)
GF_SMTP_ENABLED=true
GF_SMTP_HOST=smtp.gmail.com:587
GF_SMTP_USER=myaddress@gmail.com
GF_SMTP_PASSWORD=my_secure_smtp_password
GF_SMTP_FROM_ADDRESS=myaddress@gmail.com

# Grafana HTTPS settings (if needed)
GF_SERVER_PROTOCOL=https
GF_SERVER_CERT_FILE=/etc/grafana/ssl/grafana.crt
GF_SERVER_CERT_KEY=/etc/grafana/ssl/grafana.key
GF_SERVER_DOMAIN=mydomain.com

# Prometheus Alertmanager SMTP settings
ALERTMANAGER_SMTP_USER=my_alert_email@gmail.com
ALERTMANAGER_SMTP_PASSWORD=alert_email_password

# cAdvisor settings (future-proof for scaling)
CADVISOR_DOCKER_HOST=tcp://host.docker.internal:2375
